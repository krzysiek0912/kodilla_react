{
  "name": "learning-git-2",
  "version": "1.0.0",
  "description": "# https://krzysiek0912.github.io/learning-git-2/",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:html": "globstar nu-html-checker *.html",
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdir -p sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build": "npm-run-all build:* test",
    "build:clean": "rimraf css/*css",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "build-prod": "npm-run-all build-prod:* test",
    "build-prod:clean": "rimraf docs/**",
    "build-prod:sass": "node-sass --output-style compressed -o docs/css sass",
    "build-prod:autoprefixer": "autoprefixer-cli docs/css/style.css",
    "build-prod:htmlmin": "cp *.html docs/ && html-minifier --input-dir docs --output-dir docs --remove-comments --collapse-whitespace --minify-js --minify-css",
    "build-prod:copy": "cp -r images/ docs/images && cp -r js/ docs/js && cp -r vendor/ docs/vendor",
    "build-prod:jsmin": "uglifyjs js/modal.js > docs/js/modal.js && uglifyjs js/script.js > docs/js/script.js ",
    "build-prod:test": "globstar nu-html-checker docs/*.html",
    "watch": "npm-run-all build -p watch:*",
    "watch:sassprefixer": "onchange 'sass/**/*.scss' -- npm-run-all build:sass build:autoprefixer",
    "watch:browsersync": "browser-sync start --server --files 'css/*.css' '*.html'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krzysiek0912/learning-git-2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krzysiek0912/learning-git-2/issues"
  },
  "homepage": "https://github.com/krzysiek0912/learning-git-2#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.26.7",
    "globstar": "^1.0.0",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^5.0.0",
    "imagemin-gifsicle": "^6.0.1",
    "jshint": "^2.10.2",
    "lodash": ">=4.17.13",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nu-html-checker": "^0.1.0",
    "onchange": "^6.0.0",
    "rimraf": "^2.6.3",
    "superagent": ">=3.7.0",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.6.0"
  },
  "dependencies": {}
}
